<% title "Log In" %>

<div class="row-fluid well">
  <div class="span4">
    <h1>Log In</h1>
    <div class="alert alert-info">
      <p>Log in with your SSE LDAP Credentials</p>
    </div>
  </div>
  <div class="span4 offset1">
    <%= form_tag({ action: "authorize", controller: 'auth'}) do %>

    <%= label_tag :username %>
    <%= text_field_tag :username %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <div>
      <%= submit_tag "Submit", class: "btn btn-primary" %>
    </div>
  </div>
</div>

<% end %>