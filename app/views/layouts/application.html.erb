<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />

  <title>
    <%= content_for?(:title) ? "#{yield(:title)} &mdash; Society of Software Engineers".html_safe
      : "Society of Software Engineers" %>
  </title>

  <link rel="icon" href="<%= image_path "icon.png" %>" />

  <!-- IE11 pinning and live tiles -->
  <meta name="msapplication-TileImage" content="<%= image_path "windows-tile.png" %>" />
  <meta name="msapplication-TileColor" content="#035887" />

  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="outer_container">
    <div id="top_nav_wrapper">
      <div id="top_nav">
        <%= link_to root_url do %>
          <%= image_tag "logo-white.png",
            alt: "Society of Software Engineers", id: "logo" %>
        <% end %>

        <div id="nav_links">
          <% if signed_in? %>
            <ul>
              <li class="dropdown" id="committees-menu">
                <%= link_to "ADMIN <b class='caret'></b>".html_safe,
                  "#", data: { toggle: "dropdown" }, class: "dropdown-toggle",
                  alt: "My Account" %>
                <ul class="dropdown-menu">
                  <% if can? :manage, Event %>
                    <li><%= link_to "Events", events_path %></li>
                  <% end %>
                  <% if false #can? :manage, Upload %>
                    <li><%= link_to "Uploads", uploads_path %></li>
                  <% end %>
                  <li class="divider"></li>
                  <li><%= link_to "Logout", logout_path %></li>
                </ul>
              </li>
            </ul>
          <% else %>
            <%= link_to "LOGIN", login_path %>
          <% end %>
        </div>

        <div class="clear"></div>
      </div>
    </div>

    <%= yield :header %>

    <div id="content_wrapper">
      <% if content_for? :sidebar %>
        <div id="content_left">
          <%= render partial: "shared/flash", locals: { flash: flash } %>
          <%= yield %>
        </div>
        <div id="content_right">
          <%= yield :sidebar %>
        </div>
      <% else %>
        <%= render partial: "shared/flash", locals: { flash: flash } %>
        <%= yield %>
      <% end %>

      <div class="clear"></div>

    </div>
    <div id="footer">

      All content is Copyright &copy; <%= Time.now.year %> Society of Software Engineers.

    </div>
  </div>
  <%= render partial: "shared/stats" %>
</body>
</html>

